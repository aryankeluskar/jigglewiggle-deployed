{
  "manifest_version": 3,
  "name": "Steal This Move",
  "version": "1.0.0",
  "description": "Open any YouTube video in Steal This Move to learn dance moves with AI coaching.",
  "permissions": ["activeTab", "tabs"],
  "action": {
    "default_title": "Steal This Move",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  }
}
